(function() {
  angular.module('readingList', [])

  .config(['$httpProvider', function($httpProvider){
    $httpProvider.defaults.headers.common['X-CSRF-Token'] = $('meta[name=csrf-token]').attr('content');
  }])

  .run(function() {
    console.log("Angular app is running!");
  })

  .controller('ReadingListController', function($rootScope, $scope, $http){
    $rootScope.books = {}
    $scope.index = function() {
      $http.get('/api/v1/books')
        .success(function(data) {
          $rootScope.books = data.reverse();
        })
    };
    this.genres = genres;
    this.showForm = false;
    $scope.delete_book = function(book) {
      if(confirm("Are you sure you want to remove this book?")) {
        $http.delete('/api/v1/books/' + book.id)
          .success(function() {
            var index = $rootScope.books.map(function(e) { return e.id; }).indexOf(book.id);
            $rootScope.books.splice(index, 1);
          })
          .error(function(data, status) {
            console.log(status);
            $scope.errors.push(status);
          });
      };
    };
  })

  .directive('bookGenres', function(){
    return {
      restrict: 'E',
      templateUrl: 'partials/book-genres.html',
      scope: {
        genres: '='
      }
    }
  })

  .directive('bookCover', function(){
    return {
      restrict: 'E',
      templateUrl: 'partials/book-cover.html',
      replace: true
    }
  })

  .directive('bookEditForm', function(){
    return {
      restrict: 'E',
      templateUrl: 'partials/book-edit-form.html',
      replace: true,
      controller: function() {
        this.showEditForm = false;
        this.edit_book = function(form, book) {
          form.$setPristine();
          this.showEditForm = false;
        }
      },
      controllerAs: "bookEditFormCtrl"
    }
  })

  .directive('reviewForm', function(){
    return {
      restrict: 'E',
      templateUrl: '<%= asset_path("angular-app/partials/review-form.html") %>',
      replace: true,
      controller: function($rootScope, $http){
        this.book = {genres:{}};

        this.addReview = function(form){
          $http.post('api/v1/books', this.book)
          .success(function(data) {
            $rootScope.books.unshift(data);
          })
          .error(function(data, status) {
            console.log(status);
            $scope.errors.push(status)
          });
          this.book = {genres:{}};

        }
      },
      controllerAs: 'reviewFormCtrl',
      scope: {
        books: '=',
        genres: '='
      }
    }
  });

  var genres = [ 'fable', 'fantasy', 'fiction', 'folklore', 'horror', 'humor', 'legend', 'metafiction', 'mystery', 'mythology', 'non-fiction', 'poetry' ];

})();
